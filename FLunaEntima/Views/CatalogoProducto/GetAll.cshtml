@model ML.Catalogo
@{
     ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Catalogo Producto</h2>

<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un Catalogo + para agregar...</h5>
    </div>
</div>

<div style="float:right;">
    @Html.ActionLink("Agregar Catalogo", "Form", "CatalogoDepartamento", htmlAttributes: new {@class = "btn btn-success"})   
</div>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>

            <td class="visually-hidden">IdProducto</td>
            <td>Descripcion</td>
            <td>IdUsuario</td>
            <td>Fecha de Creacion</td>

            <td>Eliminar</td>
        </tr>

    </thead>
    <tbody>
        @foreach (ML.Catalogo catalogos in Model.Catalogos)
        {
            <tr>
                <td><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "CatalogoProducto", new { IdProducto = catalogos.IdProducto })"></a></td>

                <td class="visually-hidden">@catalogos.IdProducto</td>
                <td>@catalogos.Descripcion</td>
                <td>@catalogos.IdProducto</td>
                <td>@catalogos.FechaCreacion</td>
>
                <td>
                    <a class="btn btn-danger bi bi-trash2" href="@Url.Action("Delete", "CatalogoProducto", new {IdProducto = catalogos.IdProducto })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');">   </a>
                </td>

            </tr>
        }

    </tbody>

</table>